{
  "rules": {
    ".read": true,
    "comments": {
      "$commentID": {
        ".write": "auth != null && !data.exists()",
        ".validate": "newData.hasChildren(['userid', 'body'])",
      	"body": {
      	  ".validate":"newData.isString()"
      	},
      	"userid": {
          ".validate":"(newData.val() == auth.id) || (('facebook:' + newData.val()) == auth.uid)"
      	}
      }
    }
  }
}
